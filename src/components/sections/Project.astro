---
import ProjectCard from "../../components/elements/ProjectCard.astro";
import { projects } from "../../scripts/projects.ts";
---

<section id="projects" class="p-8 flex flex-col gap-8 items-center bg-black">
  <div class="border-b-accent-200 border-t-2 pt-4">
    <h2 class="text-2xl sm:text-4xl font-bold text-red-500 mb-4 pt-8">
      Projects
    </h2>
    <p class="text-zinc-400 leading-relaxed max-w-2xl">
      Here are some of the projects I've worked on recently. Feel free to
      explore and <span class="text-accent-200"
        >check out the code on GitHub!</span
      >
      Some GH links might be private due to company policies.
    </p>
  </div>

  {projects.map((item) => <ProjectCard project={item} />)}
</section>
